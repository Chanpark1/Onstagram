<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="5dp">

    <TextView
        android:id="@+id/set_lock_dialog_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비공개 계정으로 전환하시겠어요?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"/>

    <View
        android:id="@+id/set_lock_dialog_view"
        android:layout_width="0dp"
        android:layout_height="0.6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_lock_dialog_logo"
        app:layout_constraintBottom_toTopOf="@id/set_lock_dialog_content"
        android:background="#80707070"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/set_lock_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_lock_dialog_view"
        android:text="회원님의 팔로워만 회원님의 게시글을 볼 수 있습니다."
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/set_lock_dialog_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/set_lock_dialog_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="비공개로 전환"
        android:layout_marginTop="15dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>