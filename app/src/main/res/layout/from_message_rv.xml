<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <TextView
        android:id="@+id/from_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="message"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:background="@drawable/message_radius"
        android:backgroundTint="#CC808080"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <ImageView
        android:id="@+id/from_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:contentDescription="@string/contentDescription"/>

    <TextView
        android:id="@+id/from_hidden_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@+id/from_image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>





</androidx.constraintlayout.widget.ConstraintLayout>