<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/to_message_iv_group"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/to_message_tv_group"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/to_message_tv_group_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/to_message_iv_group"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/to_message_tv_group"
        android:text="username"
        android:textColor="#E6777777"
        android:layout_marginStart="11dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>


    <TextView
        android:id="@+id/to_message_tv_group"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@+id/to_message_iv_group"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="message"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:background="@drawable/message_radius"
        android:backgroundTint="#CC000000"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/to_image_group"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>





</androidx.constraintlayout.widget.ConstraintLayout>